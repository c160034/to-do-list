<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit To-Do</h1>
    <div class="col-6 offset-3">
        <form action="/index/<%=item.id%>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="item[title]"
                    value="<%=item.title %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="deadline">Location</label>
                <input class="form-control" type="date" id="deadline" name="item[deadline]"
                    value="<%= item.deadline%>">
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update To-Do</button>
            </div>
        </form>
        <a href="/index">Back To All To-Do</a>

    </div>
</div>
