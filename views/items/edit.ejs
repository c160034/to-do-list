<% layout('layouts/boilerplate')%>
    <h1>Edit To-Do</h1>
    <form action="/index/<%=item.id%>?_method=PUT" method="POST">
        <div>
            <label for="title">Title</label>
            <input type="text" id="title" name="item[title]" value="<%=item.title %>">
        </div>
        <div>
            <label for="deadline">Deadline</label>
            <input type="date" id="deadline" name="item[deadline]" value="<%= item.deadline%>">
        </div>
        <button>Update To-Do</button>
    </form>
    <a href="/index">Back To All To-Do</a>