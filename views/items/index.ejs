<% layout('/layouts/boilerplate')%>
<h1>To-Do-List</h1>
<div>
    <a href="/new">Add To-Do</a>
</div>
<ul>
    <% for (let item of items){%>
    <li><%= item.title %> 
        <% let date = new Date().toJSON().slice(0,10) %> 
        <% if (item.deadline!=date) { %> 
            <span> by </span><%= item.deadline %> 
        <% } else { %> 
            <span> by Today </span> 
        <% } %>
        <p> 
            <a href="/<%= item.id %>/edit">Edit</a>
        </p> 
        <form action="/index/<%= item.id %>?_method=DELETE" method="POST">
            <button> &#215</button>
        </form>
    </li>
    <% }%>
</ul>